<Brushes>
  <Brush Name="MCM.Title.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Center" TextVerticalAlignment="Center">
    <Styles>
      <Style Name="Default" FontColor="#C7AD7CFF" TextGlowColor="#000000FF" TextOutlineColor="#000000FF" TextOutlineAmount="0.3" TextGlowRadius="0"
             TextBlur="0.1" FontSize="40" TextShadowAngle="60"/>
    </Styles>
  </Brush>

  <Brush Name="MCM.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" FontSize="24" >
    <Styles>
      <Style Name="Default" FontColor="#FFCF9AFF" TextBlur="0"  TextShadowAngle="0" TextAlphaFactor="0.8" TextGlowColor="#FFFFFF00" TextOutlineColor="#FFFFFF00"
             TextOutlineAmount="0" TextGlowRadius="0" />
    </Styles>
  </Brush>


  <Brush Name="MCM.Hint.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Left" TextVerticalAlignment="Center">
    <Styles>
      <Style Name="Default" FontColor="#DDC3A1FF" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" TextShadowOffset="0" TextShadowAngle="60" FontSize="28" />
    </Styles>
  </Brush>
  <Brush Name="MCM.Item.Name" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Left" TextVerticalAlignment="Center">
    <Styles>
      <Style Name="Default" FontColor="#F7C895FF" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" TextShadowOffset="0" TextShadowAngle="60" FontSize="28" />
      <Style Name="Disabled" TextAlphaFactor="0.5" />
    </Styles>
  </Brush>

  <Brush Name="MCM.Group.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Right" TextVerticalAlignment="Center" FontSize="30">
    <Styles>
      <Style Name="Default" FontColor="#FFCF9AFF" TextGlowRadius="0" TextShadowAngle="0" TextAlphaFactor="0.8" TextGlowColor="#FFFFFF00"
             TextOutlineColor="#FFFFFF00" TextOutlineAmount="0" TextBlur="0" />
    </Styles>
  </Brush>

  <Brush Name="MCM.Input.TextBox.Text" Font="FiraSansExtraCondensed-Regular" TextVerticalAlignment="Center">
    <Styles>
      <Style Name="Default" FontColor="#F7C895FF" TextGlowColor="#FFFFFF00" TextOutlineColor="#FFFFFF00" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" FontSize="18" />
      <Style Name="Hovered" FontColor="#ABA298FF" TextGlowColor="#FFFFFF00" TextOutlineColor="#FFFFFF00" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" FontSize="18" />
      <Style Name="Pressed" FontColor="#FFB96EFF" TextGlowColor="#FFFFFF00" TextOutlineColor="#FFFFFF00" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" FontSize="18" />
      <Style Name="Disabled" FontColor="#D5B88B00" TextGlowColor="#00000000" />
    </Styles>
  </Brush>

  <Brush Name="MCM.Input.TextBox.Input">
    <Layers>
      <BrushLayer Name="Default" Sprite="frame_small_9" ExtendTop="3" ExtendBottom="3"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="0.7" ColorFactor="1" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" AlphaFactor="0.9" ColorFactor="1.2" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" AlphaFactor="0.8" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" AlphaFactor="1" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" AlphaFactor="0.5" ColorFactor="0.7" />
      </Style>
    </Styles>
  </Brush>

</Brushes>