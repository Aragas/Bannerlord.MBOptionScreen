<Brushes>

  <Brush Name="MCM.Input.String" BaseBrush="SPOptions.Dropdown.Center" />

  <Brush Name="MCM.Input.Bool.Empty" BaseBrush="SPOptions.Checkbox.Empty.Button" />
  <Brush Name="MCM.Input.Bool.Full" BaseBrush="SPOptions.Checkbox.Full.Button" />
  
  <Brush Name="MCM.Slider.Canvas">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\SPOptions\standart_slider_canvas" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="MCM.Slider.Filler">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\SPOptions\standart_slider_fill" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="MCM.Slider.Frame">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\SPOptions\standart_slider_frame" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="MCM.Slider.Handle" BaseBrush="SPOptions.Slider.Handle">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\SPOptions\standart_slider_knob" IsHidden="true" ExtendLeft="12" ExtendTop="14" ExtendBottom="12" ExtendRight="12" />
      <BrushLayer Name="Hovered" Sprite="SPGeneral\SPOptions\standart_slider_knob_hover" IsHidden="true" ExtendLeft="12" ExtendTop="14" ExtendBottom="12" ExtendRight="12" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" IsHidden="false" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Hovered" ColorFactor="0.8" IsHidden="false" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Hovered" IsHidden="false" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.1" IsHidden="false" AlphaFactor="0" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="MCM.CharacterCreation.Panel">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\CharacterCreation\character_creation_panel" HorizontalFlip="true"  />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" HorizontalFlip="true"  />
      </Style>
    </Styles>
  </Brush>

</Brushes>