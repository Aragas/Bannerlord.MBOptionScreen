{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [ "MCM/*.csproj" ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "xref": [
      "xrefs/Newtonsoft.Json-xrefmap.yml",
      "https://butr.github.io/Bannerlord.ReferenceAssemblies.Documentation/xrefmap.yml",
      "https://butr.github.io/Bannerlord.ButterLib/xrefmap.yml",
      "https://butr.github.io/Bannerlord.UIExtenderEx/xrefmap.yml"
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "content": [
      {
        "files": [ "**/**.{md,yml}" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/images/**", "codesnippet/**" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": "true",
      "_appLogoPath": "images/BUTR48.svg",
      "_appName": "MCM",
      "_appTitle": "MCM Documentation",
      "_appFooter": "Â© 2020-2023 Aragas"
    },
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
