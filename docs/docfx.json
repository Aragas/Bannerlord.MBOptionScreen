{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": ["**/*.csproj"],
          "exclude": [
		    "**/bin/**",
			"**/obj/**",
			
			"**/ModLib Substitute/**",
			"**/ModLib.Definitions Substitute/**",
			
			"**/MCM.Implementation/**",
			"**/MCM.Implementation.MBO/**",
			"**/MCM.Implementation.ModLib/**",
			"**/MCM.UI/**",
			
			"**/MCM.NuGet/**",
			"**/MCM.Integrated.NuGet/**",
			
			"**/MCM.Standalone/**",
			
			"**/MCM.Custom.ScreenTests/**",
			"**/MCM.Tests/**",
			"**/MCM.Tests.Integration/**",
		  ],
        }
      ],
      "dest": "api_generated",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
		  "api_generated/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": "true"
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default"
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}